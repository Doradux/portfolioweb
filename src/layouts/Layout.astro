---
import Scripts from "../components/LocalScripts.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body id="body" class="bg-zinc-950">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgba(var(--accent)),
      rgba(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    color: white;
    height: 100vh;
    width: 100%;
  }

  body {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    height: 100%;
    width: 100%;
    padding: 6rem 10rem;
  }

  .custom-scrollbar::-webkit-scrollbar {
    height: 5px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: #262626;
    border-radius: 0 0 10px 10px;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #5e5e5e;
  }
</style>

<Scripts />
