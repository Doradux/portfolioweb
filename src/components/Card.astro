---
import Contacts from "./Contacts.astro";
import Socials from "./Socials.astro";
import { Image } from 'astro:assets';
import memoji from '../../public/memoji.png';
---

<div
  class="flex flex-col justify-around bg-neutral-950 rounded-xl p-8 h-100 max-w-[20%] w-full outline-2 outline-double outline-neutral-800 bg-opacity-90"
>
  <div class="flex flex-col items-center gap-3">
    <div class="flex bg-neutral-800 min-w-36 max-w-36 rounded-[25%] relative">
      <Image src={memoji} alt="memoji" loading="eager" />
      <div
        class="absolute bottom-1 right-1 h-[1rem] w-[1rem] rounded-full bg-green-600 shadow-[inset_0px_0px_10px_2px_rgba(0,255,182,0.5),_0px_0px_10px_2px_rgb(50,202,131)]"
      >
      </div>
    </div>
    <h2 class="font-bold text-xl text-center">MARCOS DORADO</h2>
    <p class="px-2 py-1 bg-neutral-800 rounded-sm font-mono text-sm text-center">
      Software Developer
    </p>
  </div>

  <div class="w-full h-[1px] bg-neutral-700"></div>

  <div class="flex flex-col gap-5">
    <Contacts />
  </div>

  <div class="flex justify-around">
    <Socials />
  </div>
</div>
