---
import Header from "./Header.astro";
import About from "./About.astro";
import Resume from "./Resume.astro";
import Portfolio from "./Portfolio.astro";
---

<div class="flex flex-col h-full w-full justify-between gap-5 relative z-1">
  <div
    class="bg-neutral-950 rounded-xl min-h-[10%] w-full flex font-bold text-xl items-center outline-2 outline-double outline-neutral-800 bg-opacity-90 overflow-hidden"
  >
    <Header />
  </div>

  <div id="content" class="flex h-[85%] gap-80 absolute bottom-0 left-0 w-full transition-all ease-in-out duration-300">
    <About />
    <Resume />
    <Portfolio />
  </div>
</div>
