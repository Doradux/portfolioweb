---
import Header from "./Header.astro";
import About from "./About.astro";
import Resume from "./Resume.astro";
import Portfolio from "./Portfolio.astro";
---

<div class="flex flex-col h-full w-full justify-between gap-5 relative z-1">
  <div
    class="bg-neutral-950 hidden rounded-xl min-h-[10%] w-full lg:flex font-bold text-xl items-center outline-2 outline-double outline-neutral-800 bg-opacity-90"
  >
    <Header />
  </div>
  <div class="h-full w-full relative">
    <div id="content" class="flex flex-row h-full gap-10 bottom-0 left-0 transition-all ease-in-out duration-300 absolute w-full">
      <About />
      <Resume />
      <Portfolio />
    </div>
  </div>
</div>
