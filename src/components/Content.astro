---
import Header from "./Header.astro";
import About from "./About.astro";
import Resume from "./Resume.astro";
import Portfolio from "./Portfolio.astro";
---

<div class="flex flex-col h-full w-full justify-between gap-5 z-1">
  <div
    class="bg-neutral-950 top-1/2 left-0 transform p-3 h-56 justify-around flex flex-col lg:flex-row absolute z-40 w-1/2 md:w-2/6 rounded-r-xl lg:static lg:rounded-xl lg:h-[10%] lg:w-full lg:flex font-bold text-xl items-center outline-2 outline-double outline-neutral-800 lg:bg-opacity-90"
  >
    <Header />
  </div>
  <div id="shield" class="bg-neutral-950 z-20 absolute w-full h-full lg:hidden opacity-90 "></div>
  <div class="h-full w-full relative">
    <div
      id="content"
      class="flex flex-row h-full gap-10 bottom-0 left-0 transition-all ease-in-out duration-300 absolute w-full"
    >
      <About />
      <Resume />
      <Portfolio />
    </div>
  </div>
</div>
